{
	"name": "homework",
	"version": "1.0.0",
	"description": "Tra-ta-ta",
	"author": "Alexander Baschuk",
	"main": "index.js",
	"scripts": {
		"build": "npm run lint && webpack --mode development",
		"build-prod": "npm run lint && webpack --mode production",
		"build-storybook": "build-storybook",
		"lint": "eslint --ext .ts,.tsx --fix src/",
		"loki": "npm run build-storybook && npx loki --requireReference --reactUri file:./storybook-static",
		"loki:update": "npm run build-storybook && npx loki update --requireReference --reactUri file:./storybook-static",
		"start": "webpack-dev-server --mode=development --hot --open",
		"storybook": "start-storybook -p 6006",
		"test": "jest",
		"watch": "webpack --watch --mode development"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AlexanderBaschuk/react-course-2020.git"
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test && npm run lint"
		}
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.0",
		"@babel/preset-react": "^7.9.4",
		"@babel/preset-typescript": "^7.9.0",
		"@storybook/addon-actions": "^5.3.18",
		"@storybook/addon-knobs": "^5.3.18",
		"@storybook/addon-links": "^5.3.18",
		"@storybook/addon-storysource": "^5.3.18",
		"@storybook/addons": "^5.3.18",
		"@storybook/cli": "^5.3.18",
		"@storybook/react": "^5.3.18",
		"@types/enzyme": "^3.10.5",
		"@types/jest": "^25.1.4",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"babel-jest": "^25.2.4",
		"babel-loader": "^8.1.0",
		"babel-plugin-emotion": "^10.0.33",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-loader": "^4.0.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"html-webpack-plugin": "^4.0.3",
		"husky": "^4.2.3",
		"jest": "^25.2.7",
		"jest-emotion": "^10.0.32",
		"loki": "^0.20.3",
		"prettier": "^2.0.2",
		"react-router-dom": "^5.2.0",
		"typescript": "^3.8.3",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	},
	"dependencies": {
		"@emotion/core": "^10.0.28",
		"@emotion/styled": "^10.0.27",
		"ramda": "^0.27.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	},
	"loki": {
		"configurations": {
			"chrome.laptop": {
				"target": "chrome.app",
				"width": 1366,
				"height": 768,
				"deviceScaleFactor": 1,
				"mobile": false
			}
		}
	}
}
